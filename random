@echo off

:: Define a marker file
set MARKER_FILE=installation_done.txt

:: Check if the marker file exists
if exist "%MARKER_FILE%" (
    echo Requirements already installed. Skipping installation step...
) else (
    echo Installing requirements...
    pip install -r requirements.txt
    echo Installation complete. Creating marker file...
    echo Installed on %date% %time% > "%MARKER_FILE%"
)

:: Run your operations
echo Running operations...
:: Add your operations here
